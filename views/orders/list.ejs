<%- include('../partials/header', { title: 'Pedidos | CiwitaPrint', currentPath: '/orders' }) %>

<div class="card">
  <div class="card-header d-flex justify-content-between align-items-center">
    <h4 class="mb-0">Lista de Pedidos</h4>
    <a href="/orders/add" class="btn btn-primary">
      <i class="bi bi-plus-circle me-2"></i>Agregar Pedido
    </a>
  </div>
  <div class="card-body">
    <div class="table-responsive">
      <table class="table table-hover data-table">
        <thead class="table-light">
          <tr>
            <th>ID</th>
            <th>Cliente</th>
            <th>Fecha</th>
            <th>Estado</th>
            <th>Acciones</th>
          </tr>
        </thead>
        <tbody>
          <% orders.forEach(order => { %>
            <tr>
              <td><%= order.id %></td>
              <td><%= order.Customer ? order.Customer.name : 'Sin cliente' %></td>
              <td><%= new Date(order.date).toLocaleDateString('es-ES', {year: 'numeric', month: '2-digit', day: '2-digit'}) %></td>
              <td>
                <span class="badge 
                  <%= order.status === 'Completado' ? 'bg-success' : 
                      order.status === 'Pendiente' ? 'bg-warning' : 
                      order.status === 'Cancelado' ? 'bg-danger' : 'bg-secondary' %>">
                  <%= order.status %>
                </span>
              </td>
              <td>
                <a href="/orders/<%= order.id %>" class="btn btn-sm btn-outline-primary">
                  <i class="bi bi-eye"></i> Detalles
                </a>
              </td>
            </tr>
          <% }); %>
        </tbody>
      </table>
    </div>
  </div>
</div>

<%- include('../partials/footer') %>