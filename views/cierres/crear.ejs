

<div class="container mt-5">
  <h2 class="mb-4">Nuevo Cierre de Caja</h2>
  <form action="/cierres" method="POST">
    <div class="mb-3">
      <label for="fecha" class="form-label">Fecha</label>
      <input type="date" class="form-control" name="fecha" required>
    </div>
    <div class="mb-3">
      <label for="total_ingresos" class="form-label">Total Ingresos</label>
      <input type="number" step="0.01" class="form-control" name="total_ingresos" required>
    </div>
    <div class="mb-3">
      <label for="total_gastos" class="form-label">Total Gastos</label>
      <input type="number" step="0.01" class="form-control" name="total_gastos" required>
    </div>
    <div class="mb-3">
      <label for="saldo_final" class="form-label">Saldo Final</label>
      <input type="number" step="0.01" class="form-control" name="saldo_final" required>
    </div>
    <div class="mb-3">
      <label for="usuario_id" class="form-label">Usuario ID</label>
      <input type="number" class="form-control" name="usuario_id" required>
    </div>
    <button type="submit" class="btn btn-primary">Guardar</button>
    <a href="/cierres" class="btn btn-secondary">Cancelar</a>
  </form>
</div>
