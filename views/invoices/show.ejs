  <div class="invoice-footer">
    <p>Â¡Gracias por su preferencia!</p>
    <p>Factura generada electrÃ³nicamente</p>
    <p>Validez fiscal: 30 dÃ­as</p>
  </div>

   <script>
  function imprimirYCerrar() {
    window.print();
    setTimeout(() => {
      window.location.href = '/invoices'; // Cambia por tu ruta real
    }, 300);
  }
</script>

<div class="no-print" style="text-align: center; margin-top: 10px;">
  <button onclick="imprimirYCerrar()" 
    style="padding: 8px 15px; background: #28a745; color: white; border: none; border-radius: 4px; cursor: pointer;">
    Imprimir Factura
  </button>
</div>
</body>
</html>