<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Factura - CiwitaPrint</title>
<style>
    @page { 
       size: 80mm auto; 
      margin: 4mm;
    }
    body {
      font-family: 'Arial', sans-serif;
      font-size: 10px;
      line-height: 1.2;
      width: 65mm;
      margin: 0 auto;
      padding: 0;
      color: #000;
      word-wrap: break-word;
      overflow-wrap: break-word;
    }
    .invoice-header, .invoice-info, .payment-section, .invoice-footer {
      width: 100%;
      box-sizing: border-box;
    }
    .invoice-header {
      text-align: center;
      margin-bottom: 3mm;
      padding-bottom: 2mm;
      border-bottom: 1px dashed #000;
    }
    .invoice-header h1 {
      font-size: 14px;
      font-weight: bold;
      margin: 2mm 0;
      letter-spacing: 0.5px;
    }
    .invoice-header p {
      margin: 1mm 0;
      font-size: 9px;
      word-break: break-word;
    }
    .invoice-info {
      margin-bottom: 3mm;
      padding-bottom: 2mm;
      border-bottom: 1px dashed #000;
    }
    .info-row {
      display: flex;
      justify-content: space-between;
      margin: 1mm 0;
      flex-wrap: wrap;
    }
    .info-label {
      font-weight: bold;
      min-width: 20mm;
    }
    .info-value {
      text-align: right;
      flex-grow: 1;
    }
    .items-table {
      width: 100%;
      border-collapse: collapse;
      margin-bottom: 3mm;
      table-layout: fixed;
      word-wrap: break-word;
    }
    .items-table th, .items-table td {
      padding: 1mm 0;
      border-bottom: 1px dashed #ccc;
      vertical-align: top;
      font-size: 9px;
    }
    .items-table th {
      font-weight: bold;
      border-bottom: 1px dashed #000;
    }
    .col-desc { width: 40%; }
    .col-qty { width: 15%; text-align: center; }
    .col-price { width: 20%; text-align: right; }
    .col-total { width: 25%; text-align: right; font-weight: bold; }
    .totals-table {
      width: 100%;
      margin-bottom: 3mm;
    }
    .totals-table td {
      padding: 1mm 0;
      font-size: 9px;
    }
    .label { font-weight: bold; }
    .value { text-align: right; font-weight: bold; }
    .grand-total {
      border-top: 1px dashed #000;
      border-bottom: 1px double #000;
      font-size: 10px;
    }
    .payment-section {
      margin-bottom: 3mm;
      padding-top: 2mm;
      border-top: 1px dashed #000;
    }
    .payment-section h3 {
      text-align: center;
      font-size: 9px;
      margin: 1mm 0 2mm;
      font-weight: bold;
    }
    .payment-method {
      display: inline-block;
      padding: 1mm 2mm;
      border-radius: 2mm;
      font-size: 8px;
      font-weight: bold;
      margin-right: 2mm;
    }
    .payment-cash { background: #e8f5e9; color: #2e7d32; }
    .payment-card { background: #e3f2fd; color: #1565c0; }
    .payment-transfer { background: #fff3e0; color: #e65100; }
    .payment-cheque { background: #fce4ec; color: #ad1457; }
    .invoice-footer {
      text-align: center;
      font-size: 8px;
      margin-top: 4mm;
      padding-top: 2mm;
      border-top: 1px dashed #000;
    }
    .barcode {
      text-align: center;
      margin: 2mm 0;
      font-family: 'Libre Barcode 128', cursive;
      font-size: 24px;
    }
    @media print {
      .no-print { display: none !important; }
      body { 
        width: 65mm !important;
        margin: 0;
        padding: 0;
      }
    }
  </style>
</head>
<body>
  <div class="invoice-header">
    <h1>CIWITAPRINT</h1>
    <p>RNC: 133346834</p>
    <p>C/ Porvenir Barrio el Progreso #46, AndrÃ©s Boca Chica</p>
    <p>ciwitaprint@gmail.com</p>
    <p>809-708-6063</p>
  </div>

  <div class="invoice-info">
    <div class="info-row">
      <span class="info-label">Factura #:</span>
      <span class="info-value"><%= invoice.id %></span>
    </div>
    <% if (invoice.fiscalNumber && invoice.fiscalNumber.trim() !== '') { %>
      <div class="info-row">
        <span class="info-label">NCF:</span>
        <span class="info-value"><%= invoice.fiscalNumber %></span>
      </div>
    <% } %>
    <div class="info-row">
      <span class="info-label">Fecha:</span>
      <span class="info-value">
        <%= new Date(invoice.date).toLocaleDateString('es-DO', { 
          day: '2-digit', month: '2-digit', year: 'numeric' 
        }) %>
      </span>
    </div>
    <div class="info-row">
      <span class="info-label">Cliente:</span>
      <span class="info-value"><%= invoice.customer ? invoice.customer.name : 'Consumidor Final' %></span>
    </div>
  </div>

  <table class="items-table">
    <thead>
      <tr>
        <th class="col-desc">Producto</th>
        <th class="col-qty">Cant.</th>
        <th class="col-price">Precio</th>
        <th class="col-total">Total</th>
      </tr>
    </thead>
    <tbody>
      <% if (invoice.details && invoice.details.length > 0) { %>
        <% invoice.details.forEach(detail => { %>
          <tr>
            <td class="col-desc"><%= detail.product ? detail.product.name : 'Producto' %></td>
            <td class="col-qty"><%= detail.quantity %></td>
            <td class="col-price">RD$ <%= parseFloat(detail.price).toFixed(2) %></td>
            <td class="col-total">RD$ <%= (detail.quantity * detail.price).toFixed(2) %></td>
          </tr>
        <% }) %>
      <% } else { %>
        <tr>
          <td colspan="4" style="text-align: center;">No hay productos</td>
        </tr>
      <% } %>
    </tbody>
  </table>

  <table class="totals-table">
    <tr>
      <td class="label">Subtotal:</td>
      <td class="value">RD$ <%= parseFloat(invoice.subtotal).toFixed(2) %></td>
    </tr>
    <tr>
      <td class="label">ITBIS (18%):</td>
      <td class="value">RD$ <%= parseFloat(invoice.itbis).toFixed(2) %></td>
    </tr>
    <tr>
      <td class="label">Descuento:</td>
      <td class="value">RD$ <%= parseFloat(invoice.discount).toFixed(2) %></td>
    </tr>
    <% if (invoice.labor && invoice.labor > 0) { %>
      <tr>
        <td class="label">Servicio ROA:</td>
        <td class="value">RD$ <%= parseFloat(invoice.labor).toFixed(2) %></td>
      </tr>
    <% } %>
    <tr class="grand-total">
      <td class="label">TOTAL:</td>
      <td class="value">RD$ <%= parseFloat(invoice.total).toFixed(2) %></td>
    </tr>
    <tr>
      <td class="label">Pagado:</td>
      <td class="value">RD$ <%= parseFloat(totalPaid).toFixed(2) %></td>
    </tr>
    <tr>
      <td class="label">Saldo:</td>
      <td class="value">RD$ <%= parseFloat(balance).toFixed(2) %></td>
    </tr>
  </table>

  <% if (payments && payments.length > 0) { %>
    <div class="payment-section">
      <h3>PAGOS REGISTRADOS</h3>
      <% payments.forEach(payment => { %>
        <div class="info-row" style="margin-bottom: 2mm;">
          <span class="info-label">
            <span class="payment-method payment-<%= payment.paymentMethod.toLowerCase() %>">
              <%= payment.paymentMethod %>
            </span>
          </span>
          <span class="info-value">
            RD$ <%= parseFloat(payment.amount).toFixed(2) %> - 
            <%= new Date(payment.created_at).toLocaleDateString('es-DO', { 
              day: '2-digit', month: '2-digit', year: 'numeric' 
            }) %>
          </span>
        </div>
      <% }) %>
    </div>
  <% } %>

